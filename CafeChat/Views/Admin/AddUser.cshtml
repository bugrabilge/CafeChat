@model EntityLayer.Concrete.Users // YourNamespace.Cafe, Cafe sınıfının bulunduğu namespace'i temsil etmelidir.

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Control</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/CafeAdd.css">
</head>
<body>

    <div class="container">
        <h2>Kullanıcı Ekle</h2>
        <form id="addUserForm" asp-action="AddUser" asp-controller="Admin" method="post">
            <div class="form-group">
                <label for="name">Ad:</label>
                <input type="text" id="name" name="Name" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="surname">Soyad:</label>
                <input type="text" id="surname" name="Surname" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="username">Kullanıcı Adı:</label>
                <input type="text" id="username" name="Username" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="password">Şifre:</label>
                <input type="number" id="password" name="Password" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Telefon:</label>
                <input type="number" id="phoneNumber" name="PhoneNumber" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="userTypeId">Kullanıcı Tipi:</label>
                <select id="userTypeId" name="UserTypeId" class="form-control" required>
                    <option value="">Kullanıcı Tipi Seçiniz</option>
                    @foreach (var userTypes in ViewBag.UserTypes)
                    {
                        <option value="@userTypes.Id">@userTypes.Type</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="userStatus">Durum:</label>
                <select id="userStatus" name="UserStatus" class="form-control" required>
                    <option value="true">Aktif</option>
                    <option value="false">Pasif</option>
                </select>
            </div>
            <button id="userSubmitBtn" type="submit">Kullanıcı Ekle</button>
        </form>
    </div>

</body>
</html>
